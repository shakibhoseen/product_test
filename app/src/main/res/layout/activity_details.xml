<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailsActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:outlineAmbientShadowColor="#030303"

        app:cardBackgroundColor="#00BCD4"
        app:cardElevation="6dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_baseline_shopping_cart_24" />

                <TextView
                    android:id="@+id/toolbar_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="35dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/alfa_slab_one"
                    android:maxLines="1"
                    android:text="Product Details"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

    </androidx.cardview.widget.CardView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80ffffff"
            android:padding="10dp">




            <ImageView
                android:id="@+id/image_id"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_launcher_background"/>


            <androidx.recyclerview.widget.RecyclerView
                android:layout_below="@+id/bacth_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/recycler_Id"/>


        <LinearLayout
            android:gravity="center"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:background="@drawable/round_style"

                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    app:cardElevation="2dp"
                    app:cardCornerRadius="20dp"

                    android:layout_margin="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_fb"/>
                </androidx.cardview.widget.CardView>



                </LinearLayout>


            <LinearLayout
                android:background="@drawable/round_style"

                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    app:cardElevation="2dp"
                    app:cardCornerRadius="20dp"

                    android:layout_margin="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_massenger"/>
                </androidx.cardview.widget.CardView>



            </LinearLayout>

            <LinearLayout
                android:background="@drawable/round_style"

                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    app:cardElevation="2dp"
                    app:cardCornerRadius="20dp"

                    android:layout_margin="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_pinterest"/>
                </androidx.cardview.widget.CardView>



            </LinearLayout>


            <LinearLayout
                android:background="@drawable/round_style"

                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    app:cardElevation="2dp"
                    app:cardCornerRadius="20dp"

                    android:layout_margin="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_twitter"/>
                </androidx.cardview.widget.CardView>



            </LinearLayout>

            <LinearLayout
                android:background="@drawable/round_style"

                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    app:cardElevation="2dp"
                    app:cardCornerRadius="20dp"

                    android:layout_margin="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_viber"/>
                </androidx.cardview.widget.CardView>



            </LinearLayout>


            <LinearLayout
                android:background="@drawable/round_style"

                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    app:cardElevation="2dp"
                    app:cardCornerRadius="20dp"

                    android:layout_margin="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_whtsapps"/>
                </androidx.cardview.widget.CardView>



            </LinearLayout>

            <LinearLayout
                android:background="@drawable/round_style"

                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    app:cardElevation="2dp"
                    app:cardCornerRadius="20dp"

                    android:layout_margin="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_skype"/>
                </androidx.cardview.widget.CardView>



            </LinearLayout>



            </LinearLayout>


            <TextView
                android:layout_marginTop="25dp"
                android:id="@+id/name_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/heebo_variable"
                android:text="Product Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:layout_marginTop="25dp"
                android:id="@+id/description_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/heebo_variable"
                android:text="Product Details"

                android:textColor="@color/black" />

            <View

                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"


                android:background="#c7c7c7" />

            <TextView
                android:layout_marginTop="25dp"
                android:id="@+id/price_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="598Tk"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <View

                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"

                android:layout_centerHorizontal="true"
                android:background="#c7c7c7" />


            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/carter_one"
                android:text="Size"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="20dp"

                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp">
                    <LinearLayout
                        android:id="@+id/small_liner_id"
                        android:background="@drawable/box_style"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:text="small"
                            android:textColor="@color/black" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="20dp"

                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp">
                    <LinearLayout
                        android:id="@+id/large_liner_id"
                        android:background="@drawable/box_style2"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:text="large"
                            android:textColor="@color/black" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>



            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/carter_one"
                android:text="Color"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="20dp"

                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp">
                    <LinearLayout
                        android:id="@+id/white_liner_id"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:text="white"
                            android:textColor="@color/black" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="20dp"

                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp">
                    <LinearLayout
                        android:id="@+id/black_liner_id"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:text="black"
                            android:textColor="@color/black" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="20dp"

                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp">
                    <LinearLayout
                        android:clickable="true"
                        android:id="@+id/minus_liner_id"
                        android:background="@drawable/custom_button3"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:textSize="20sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:text="-"
                            android:textColor="@color/black" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView


                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    >
                    <LinearLayout

                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/number_add_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:text="100"
                            android:textColor="@color/black" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView


                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    >
                    <LinearLayout
                        android:clickable="true"
                        android:id="@+id/plus_liner_id"
                        android:background="@drawable/custom_button3"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:textSize="20sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:text="+"
                            android:textColor="@color/black" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Sold out"
                    android:textColor="#D61111" />
            </LinearLayout>



            <View

                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"

                android:layout_centerHorizontal="true"
                android:background="#c7c7c7" />


            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <Button
                    android:textColor="#FFFFFF"
                    android:textAllCaps="false"
                    android:background="@drawable/custom_button2"
                    android:text="Place Order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



                <Button
                    android:textColor="#FF9800"
                    android:layout_marginLeft="20dp"
                    android:textAllCaps="false"
                    android:background="@drawable/custom_button"
                    android:text="Add To Cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>
        </ScrollView>
</LinearLayout>