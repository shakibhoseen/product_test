<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroun_black2"
    tools:context=".account.RegisterActivity">

     <ScrollView
         android:layout_width="match_parent"
         android:layout_height="match_parent">


         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">





             <RelativeLayout

                 android:layout_width="match_parent"
                 android:orientation="vertical"
                 android:layout_gravity="center"
                 android:gravity="center_horizontal"

                 android:padding="16dp"

                 android:layout_height="wrap_content">



                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:textAlignment="center"
                     android:text="Create a new account"
                     android:id="@+id/titleId"
                     android:textSize="20sp"
                     android:textColor="#FFFFFF"
                     android:fontFamily="@font/alfa_slab_one"
                     android:layout_marginBottom="10dp"
                     android:textStyle="bold"
                     android:gravity="center_horizontal" />


                 <com.rengwuxian.materialedittext.MaterialEditText
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:id="@+id/username"
                     android:layout_below="@+id/titleId"
                     android:inputType="textEmailAddress"
                     android:layout_marginTop="10dp"
                     app:met_textColorHint="#fff"
                     app:met_baseColor="#fff"
                     android:textColor="#fff"
                     app:met_floatingLabel="normal"
                     android:hint="Name"/>




                 <com.rengwuxian.materialedittext.MaterialEditText
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:id="@+id/email"
                     app:met_textColorHint="#fff"
                     android:textColor="#fff"
                     android:inputType="textEmailAddress"
                     android:layout_marginTop="10dp"
                     app:met_baseColor="#fff"
                     app:met_floatingLabel="normal"
                     android:layout_below="@+id/username"
                     android:hint="Email"/>

                 <com.google.android.material.textfield.TextInputLayout
                     android:layout_width="match_parent"
                     app:passwordToggleEnabled="true"
                     app:passwordToggleTint="#fff"
                     android:id="@+id/password"
                     app:boxStrokeColor="#fff"
                     app:boxBackgroundColor="#fff"
                     android:textColorHint="#fff"
                     android:backgroundTint="#fff"

                     app:helperTextTextColor="#fff"
                     app:endIconTint="#fff"
                     android:layout_below="@+id/email"
                     app:helperText="password shold be at least 6 character"
                     android:layout_height="wrap_content">

                     <com.google.android.material.textfield.TextInputEditText
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:inputType="textPassword"
                         android:hint="Password"
                        android:textColor="#fff"
                         android:backgroundTint="#fff"
                         android:textColorHint="#fff"

                         android:shadowColor="#fff"
                         android:textColorHighlight="#fff"
                         android:textColorLink="#fff"
                         android:layout_marginTop="10dp"
                         />
                 </com.google.android.material.textfield.TextInputLayout>

                 <com.rengwuxian.materialedittext.MaterialEditText
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:id="@+id/cnfrmPassword"
                     android:inputType="textPassword"
                     android:layout_marginTop="10dp"
                     android:textColor="#fff"
                     app:met_baseColor="#fff"
                     app:met_textColor="#fff"
                     app:met_textColorHint="#fff"
                     android:layout_marginBottom="20dp"
                     app:passwordToggleEnabled="true"
                     android:layout_below="@+id/password"
                     app:met_floatingLabel="normal"
                     android:hint="Confirm Password"/>






                 <Button
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Register"
                     android:layout_centerHorizontal="true"
                     android:id="@+id/btn_register"
                     android:textStyle="bold"
                     android:layout_marginTop="20dp"
                     android:layout_below="@+id/cnfrmPassword"
                     android:textColor="#15120D"/>


                 <TextView
                     android:layout_below="@id/btn_register"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="@string/gologin"
                     android:textAlignment="center"
                     android:textColor="#FFFFFF"
                     android:fontFamily="@font/alfa_slab_one"
                     android:layout_marginTop="20dp"
                     android:padding="10dp"
                     android:id="@+id/txtGologinPageId"
                     />
             </RelativeLayout>


         </RelativeLayout>




     </ScrollView>


</LinearLayout>